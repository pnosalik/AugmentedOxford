<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ox.augmented.TourDetailFragment" >

	<TextView 
	    android:id="@+id/tour_detail_name"
	    style="?android:attr/textAppearanceLarge"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="16dp"
	    android:textIsSelectable="true" />

	<TextView 
	    android:id="@+id/tour_detail_info"
	    style="?android:attr/textAppearanceMedium"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="16dp"
	    android:textIsSelectable="true" />
	
	<TextView 
	    android:id="@+id/tour_detail_heading_pois"
	    style="?android:attr/textAppearanceMedium"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="16dp"
	    android:textIsSelectable="true" />
	<!-- android:text="@string/text_tour_detail_heading_pois" -->
	    
	
	<TextView 
	    android:id="@+id/tour_detail_pois"
	    style="?android:attr/textAppearanceMedium"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="16dp"
	    android:textIsSelectable="true" />
	
	<Button
	    android:id="@+id/tour_detail_button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_tour_detail_button_start"/>
		
</LinearLayout>

